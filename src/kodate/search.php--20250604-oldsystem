<script>
$(document).ready(function() {
	sj_btn = $('.local_jumpbtn.fixed');
	LOCAL_JUMPBTN();
});
$(window).load(function(){	
	$(window).scroll(function(){
		LOCAL_JUMPBTN();
  });
});
function LOCAL_JUMPBTN(){
	st1=$('.local_jumpbtn.static').offset().top;
	st2=$('.local_jumpbtn.fixed').offset().top;
	//$('.test').text(st1+'/'+st2);
	if(st1>st2){
		//sj_btn.fadeOut();
		sj_btn.css('opacity',0);
		sj_btn.css('z-index',-1);
	}
	else{
		//sj_btn.fadeIn();
		sj_btn.css('opacity',1);
		sj_btn.css('z-index',990);
	}
}
</script>
